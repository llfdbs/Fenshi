<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_gravity="center"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/park_car_pic"
        android:layout_width="120dp"
        android:layout_height="96dp"
        android:src="@color/red"
        />

    <TextView
        android:id="@+id/park_car_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/park_car_pic"
        android:layout_width="wrap_content"
        android:text="电动汽车(BEV)  E0034"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/park_car_carry"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/park_car_name"
        android:layout_alignLeft="@+id/park_car_name"
        android:layout_width="wrap_content"
        android:text="载重: 500 kg"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/park_car_mileage"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/park_car_carry"
        android:layout_alignLeft="@+id/park_car_carry"
        android:layout_width="wrap_content"
        android:text="满电里程: 200 km"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/park_car_price"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/park_car_mileage"
        android:layout_alignLeft="@+id/park_car_mileage"
        android:layout_width="wrap_content"
        android:text="分时价格：20元/km"
        android:layout_height="wrap_content"/>



</RelativeLayout>
