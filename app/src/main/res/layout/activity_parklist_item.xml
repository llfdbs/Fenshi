<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="10dp"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/park_car_pic"
        android:layout_width="120dp"
        android:layout_height="96dp"
        android:src="@color/red" />

    <TextView
        android:id="@+id/park_car_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/park_car_pic"
        android:text="京沙路京广高速停车位"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/park_car_carry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/park_car_name"
        android:layout_below="@+id/park_car_name"
        android:layout_marginTop="10dp"
        android:text="现有电动车 20 辆" />

    <TextView
        android:id="@+id/park_car_mileage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/park_car_carry"
        android:layout_below="@+id/park_car_carry"
        android:layout_marginTop="5dp"
        android:text="管理员 ： 李龙飞" />

    <ImageView
        android:id="@+id/park_potion"
        android:layout_width="15dp"
        android:layout_height="20dp"

        android:scaleType="center"
        android:layout_alignLeft="@+id/park_car_mileage"
        android:layout_below="@+id/park_car_mileage"
        android:layout_marginTop="5dp"
        android:src="@mipmap/icon_point" />

    <TextView
        android:id="@+id/park_car_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/park_potion"
        android:layout_alignBottom="@+id/park_potion"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="距离当前300米" />


</RelativeLayout>
